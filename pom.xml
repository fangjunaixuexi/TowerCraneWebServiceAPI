	<groupId>com.fangjun</groupId>
	<artifactId>TowerCraneWebService</artifactId>
	<packaging>war</packaging>
	<version>0.0.1-SNAPSHOT</version>
	<name>TowerCraneWebService Maven Webapp</name>
	<url>http://maven.apache.org</url>


	<properties>
