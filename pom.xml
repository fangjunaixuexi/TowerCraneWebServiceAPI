		<dependency>
			<groupId>org.apache.cxf</groupId>
			<artifactId>cxf-rt-transports-http</artifactId>
			<version>3.1.8</version>
		</dependency>
		<!--不加这个包会报错Unable to locate spring NamespaceHandler for XML schema namespace 
			[http://cxf.apache.org/jaxws] -->
